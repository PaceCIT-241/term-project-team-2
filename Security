-- Step 1: Create the users
CREATE USER 'user1'@'%' IDENTIFIED BY 'password1';
CREATE USER 'user2'@'%' IDENTIFIED BY 'password2';

-- Step 2: Grant SELECT privileges on the necessary tables
GRANT SELECT ON BookStore.authors TO 'user1'@'%';
GRANT SELECT ON BookStore.publishers TO 'user1'@'%';
GRANT SELECT ON BookStore.customers TO 'user1'@'%';
GRANT SELECT ON BookStore.books TO 'user1'@'%';
GRANT SELECT ON BookStore.orders TO 'user1'@'%';

GRANT SELECT ON BookStore.authors TO 'user2'@'%';
GRANT SELECT ON BookStore.publishers TO 'user2'@'%';
GRANT SELECT ON BookStore.customers TO 'user2'@'%';
GRANT SELECT ON BookStore.books TO 'user2'@'%';
GRANT SELECT ON BookStore.orders TO 'user2'@'%';

-- Step 3: Apply changes
FLUSH PRIVILEGES;
